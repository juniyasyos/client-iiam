# =============================================================================
# ENVIRONMENT TEMPLATE
# -----------------------------------------------------------------------------
# Copy this file when bootstrapping a brand new installation and customise it
# or use `php artisan env:use <environment>` to generate a ready-to-use .env.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Core
# -----------------------------------------------------------------------------
APP_NAME="Laravel Client Example"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://client.example.com

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# -----------------------------------------------------------------------------
# Identity & Access Management
# -----------------------------------------------------------------------------
IAM_HOST=https://iam.example.com
IAM_VERIFY_ENDPOINT=${IAM_HOST}/api/sso/verify
IAM_APP_KEY=client-example

# -----------------------------------------------------------------------------
# Server Runtime
# -----------------------------------------------------------------------------
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# -----------------------------------------------------------------------------
# Sessions
# -----------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_PARTITIONED_COOKIE=false

# -----------------------------------------------------------------------------
# Cache & Redis
# -----------------------------------------------------------------------------
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Queues & Broadcasting
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# -----------------------------------------------------------------------------
# Filesystem
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=local

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Mail
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# AWS
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# Frontend Build
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
